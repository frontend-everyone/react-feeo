.Toast {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  z-index: 9998;
  .text {
    padding: 10px 10px;
    background-color: rgba(0, 0, 0, 0.7);
    color: #FFFFFF;
    border-radius: 4px;
    position: fixed;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 14px;
    line-height: 14px;
  }
}